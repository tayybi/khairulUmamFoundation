<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEDED"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@drawable/coverpic"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/go_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:src="@drawable/backarrow" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:weightSum="7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFb"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/facebook"/>
            <ImageView
                android:id="@+id/ivTwitter"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/twitter"/>
            <ImageView
                android:id="@+id/ivInstagram"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/instagram"/>
            <ImageView
                android:id="@+id/ivYoutube"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/youtube"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/textclrwhite"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="9">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:layout_weight="3"
          android:orientation="vertical"
          android:weightSum="8">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:gravity="center"
              android:layout_weight="3"
              android:textStyle="bold"
              android:textColor="@color/colorPrimaryDark"
              android:textSize="24dp"
              android:text="Peer Syed Karamat Ali"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="5"
              android:textColor="@color/colorPrimaryDark"
              android:text="Peer Syed Karamat Ali is a well renowned islamic scholar, an inspirational speaker in Pakistan."/>
      </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#EFEDED"/>
        <LinearLayout
            android:id="@+id/lnCall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/phonecall"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center|left"
                android:textColor="@color/colorPrimaryDark"
                android:text="03001234567"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:text="Call"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EFEDED"/>
        <LinearLayout
            android:id="@+id/lnMail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/mailsend"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center|left"
                android:textColor="@color/colorPrimaryDark"
                android:text="nfo@kufpak.com"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:text="Send"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EFEDED"/>
        <LinearLayout
            android:id="@+id/lnWeb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/kuflog"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center|left"
                android:text="https://kuf.org.pk/"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:text="Visit"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EFEDED"/>
        <LinearLayout
            android:id="@+id/lnMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/location"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center|left"
                android:text="Jamia Islamia Lasania 17 kms pasroor road Narowal"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:text="Map"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EFEDED"/>

    </LinearLayout>
</LinearLayout>
